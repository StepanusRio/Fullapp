<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arrow shape -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape
                android:shape="rectangle">
                <size
                    android:width="20dp"
                    android:height="2dp" />
                <solid android:color="#000000" />
            </shape>
        </rotate>
    </item>
</layer-list>